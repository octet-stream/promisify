{
  "name": "@octetstream/promisify",
  "version": "1.3.0",
  "description": "Tiny, dependency free promisify library.",
  "main": "promisify.js",
  "author": "Nick K.",
  "license": "MIT",
  "keywords": [
    "promise",
    "promisify",
    "promisify-all",
    "promisify-some",
    "promisify-except",
    "then",
    "thenify",
    "thenify-all",
    "thenify-some",
    "thenify-except",
    "callback",
    "cb",
    "fulfill",
    "wrap",
    "wrapper",
    "async",
    "await",
    "async-await",
    "asyncawait",
    "es6",
    "es2015",
    "dependency-free"
  ],
  "repository": "octet-stream/promisify",
  "scripts": {
    "lint": "node_modules/.bin/eslint test.js helper.js",
    "limit": "node_modules/.bin/size-limit",
    "test": "node_modules/.bin/ava test.js",
    "codecov": "node_modules/.bin/codecov",
    "coverage": "node_modules/.bin/nyc yarn test",
    "report": "yarn coverage && node_modules/.bin/nyc report --reporter=html yarn test",
    "report:ci": "yarn coverage && node_modules/.bin/nyc report --reporter=lcov yarn test",
    "ci": "yarn report:ci && yarn codecov",
    "precommit": "yarn lint && yarn limit",
    "prepush": "yarn report"
  },
  "size-limit": [
    {
      "path": "promisify.js",
      "limit": "578 B"
    }
  ],
  "engines": {
    "node": ">=6"
  },
  "devDependencies": {
    "@octetstream/eslint-config": "2.0.2",
    "ava": "0.22.0",
    "codecov": "2.3.0",
    "eslint": "4.7.1",
    "eslint-plugin-ava": "4.2.2",
    "husky": "0.14.3",
    "nyc": "11.2.1",
    "sinon": "3.3.0",
    "size-limit": "0.11.4"
  }
}
